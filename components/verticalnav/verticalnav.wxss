.context {
  display: flex;
  margin-top: 20rpx;
}

.context .TypeTab {
  width: 148rpx;
}

.TypeTab .menu {
  text-align: center;
  height: 108rpx;
  width: 100%;
  color: #333333;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 108rpx;

}

.contextTab {
  margin: 0rpx 20rpx 20rpx;
}

.contextBlock {
  margin-top: 60rpx;
  display: flex;
}

.contextBlock .menuInfo {
  margin-left: 20rpx;
  height: 196rpx;
  width: 360rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.priceInfo{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.contextBlock .countImage {
  height: 48rpx;
  width: 48rpx;
}

.contextBlock_image {
  height: 196rpx;
  width: 196rpx;
  border-radius: 20rpx;
}

.menuInfo_text{
  font-size: 36rpx;
  font-weight: bold;
  color: #191919;
}

.priceInfo{
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.priceInfo_price{
  color: #F94D37;
}

.priceInfo_opera{
  width: 156rpx;
  display: flex;
  justify-content: space-between;
}